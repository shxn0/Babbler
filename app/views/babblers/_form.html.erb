<p id= "notice"><%= notice %></p>

<%= form_for(@babbler, url:choose_new_or_edit)do |f| %>
  <% if @babbler.errors.any? %>
    <div id="error_explanation">
      <h2><%= @babbler.errors.count %>errors has been detected!!</h2>
      <ul>
      <% @babbler.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <br>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit "Create", class:'btn btn-primary '%>
  <br>
<% end %>
<br>